# Axie Marketplace Sweep Bot - Environment Configuration

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Your Telegram bot token obtained from BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Comma-separated list of Telegram user IDs for admin access
ADMIN_USER_IDS=123456789,987654321

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Ronin network RPC endpoints
RONIN_MAINNET_RPC=https://api.roninchain.com/rpc
RONIN_TESTNET_RPC=https://saigon-testnet.roninchain.com/rpc

# Smart contract addresses (Ronin Mainnet)
AXIE_CONTRACT_ADDRESS=0x32950db2a7164ae833121501c797d79e7b79d74c
MARKETPLACE_CONTRACT_ADDRESS=0x213073989821f738a7ba3520c3d31a1f9ad31bbd
RON_TOKEN_ADDRESS=0xe514d9deb7966c8be0ca922de8a064264ea6bcd4

# Gas settings
DEFAULT_GAS_LIMIT=500000
# Gas price strategy: 'standard', 'fast', or 'fastest'
GAS_PRICE_STRATEGY=fast
# Gas price multiplier (1.0 = exact estimated price)
GAS_PRICE_MULTIPLIER=1.1
# Maximum gas price in Gwei to prevent overpaying during network congestion
MAX_GAS_PRICE_GWEI=100

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: 'postgres' or 'sqlite'
DB_TYPE=postgres

# PostgreSQL configuration (if DB_TYPE=postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=axie_bot_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=axie_bot_db
POSTGRES_SSL=false

# SQLite configuration (if DB_TYPE=sqlite)
SQLITE_FILENAME=./data/axie_bot.sqlite

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Set to 'true' to enable Redis caching
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Redis database number (0-15)
REDIS_DB=0
# Cache TTL in seconds
REDIS_CACHE_TTL=300

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Axie Infinity GraphQL API endpoint
AXIE_GRAPHQL_API=https://graphql-gateway.axieinfinity.com/graphql
# Backup API endpoint (if primary is down)
AXIE_GRAPHQL_API_BACKUP=https://api.axieinfinity.com/v1/graphql

# API rate limiting
# Maximum requests per minute to avoid rate limiting
API_MAX_REQUESTS_PER_MINUTE=60
# Delay between API requests in milliseconds
API_REQUEST_DELAY=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Encryption key for wallet private keys (32 characters minimum)
ENCRYPTION_KEY=your_very_long_and_secure_encryption_key_here
# JWT secret for authentication (if implemented)
JWT_SECRET=your_jwt_secret_here
# JWT token expiration in seconds
JWT_EXPIRATION=86400

# Transaction limits
# Maximum RON amount per transaction
MAX_TRANSACTION_AMOUNT=10
# Maximum RON amount per day per user
MAX_DAILY_TRANSACTION_AMOUNT=50
# Maximum number of Axies to sweep in a single operation
MAX_SWEEP_QUANTITY=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: 'error', 'warn', 'info', 'debug', 'verbose'
LOG_LEVEL=info
# Log to file (true/false)
LOG_TO_FILE=true
# Log file path
LOG_FILE_PATH=./logs/axie-bot.log
# Log rotation max size in MB
LOG_MAX_SIZE=10
# Number of log files to keep
LOG_MAX_FILES=5

# =============================================================================
# MISCELLANEOUS
# =============================================================================
# Node environment: 'development', 'production', 'test'
NODE_ENV=development
# Server port for potential web interface
PORT=3000
# Enable debug mode (true/false)
DEBUG=false
# Default timeout for operations in milliseconds
DEFAULT_TIMEOUT=30000
